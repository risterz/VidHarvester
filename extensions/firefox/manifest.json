{
  "manifest_version": 2,
  "name": "VidHarvester Capture",
  "version": "0.1.0",
  "permissions": [
    "webRequest",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "VidHarvester"
  },
  "web_accessible_resources": [],
  "applications": {
    "gecko": {
      "id": "vidharvester@example.com",
      "strict_min_version": "57.0"
    }
  }
}
